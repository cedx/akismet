{
  "description": "Prevent comment spam using Akismet service.",
  "homepage": "https://github.com/cedx/akismet",
  "name": "@cedx/akismet",

  "author": "CÃ©dric Belin <cedric@belin.io>",
  "bugs": "https://github.com/cedx/akismet/issues",
  "license": "Apache-2.0",
  "main": "./lib",
  "repository": "cedx/akismet",
  "version": "1.0.0",

  "bin": {
    "akismet": "./bin/cli.js"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "commander": "^2.9.0",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "forever": "^0.15.2",
    "morgan": "^1.7.0",
    "superagent": "^2.3.0"
  },
  "devDependencies": {
    "@cedx/gulp-david": "^2.0.4",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "codacy-coverage": "^2.0.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-istanbul": "^1.1.1",
    "gulp-jshint": "^2.0.1",
    "gulp-load-plugins": "^1.3.0",
    "gulp-mocha": "^3.0.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^2.0.0",
    "gulp-zip": "^3.2.0",
    "jsdoc": "^3.4.1",
    "jshint": "^2.9.3",
    "mocha": "^3.0.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "engines": {
    "node": ">=6.6.0"
  },
  "jshintConfig": {
    "browser": true,
    "esversion": 6,
    "freeze": true,
    "futurehostile": true,
    "jquery": true,
    "latedef": "nofunc",
    "mocha": true,
    "noarg": true,
    "nocomma": true,
    "node": true,
    "nonbsp": true,
    "nonew": true,
    "singleGroups": true,
    "trailing": true,
    "typed": true,
    "undef": true,
    "unused": true,
    "varstmt": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation"
  ],
  "scripts": {
    "coverage": "codacy-coverage < var/lcov.info",
    "restart": "npm stop && gulp clean && npm start",
    "start": "forever start -c node -e var/stderr.log -o var/stdout.log -l akismet.log --append --minUptime 30000 --spinSleepTime 30000 --uid akismet bin/cli.js",
    "stop": "forever stop akismet",
    "test": "gulp test"
  }
}
