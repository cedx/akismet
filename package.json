{
  "author": "CÃ©dric Belin <cedric@belin.io>",
  "bugs": "https://github.com/cedx/akismet.js/issues",
  "description": "Prevent comment spam using Akismet service (https://akismet.com).",
  "homepage": "https://github.com/cedx/akismet.js",
  "license": "MIT",
  "main": "./index",
  "name": "akismet-js",
  "preferGlobal": false,
  "private": false,
  "version": "0.2.0",
  "dependencies": {
    "express": "^4.4.4",
    "superagent": "^0.18.0"
  },
  "devDependencies": {
    "jshint": "^2.5.1",
    "mocha": "^1.20.1",
    "yuidocjs": "^0.3.50"
  },
  "engines": {
    "node": ">=0.10.29"
  },
  "jshintConfig": {
    "freeze": true,
    "indent": 2,
    "latedef": true,
    "newcap": true,
    "node": true,
    "nonew": true,
    "quotmark": "single",
    "strict": true,
    "trailing": true,
    "undef": true,
    "unused": true,
    "globals": {
      "describe": false,
      "it": false
    }
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cedx/akismet.js.git"
  },
  "scripts": {
    "doc": "yuidoc --lint && yuidoc --no-code",
    "lint": "jshint --verbose lib test",
    "test": "mocha --check-leaks --recursive --reporter spec test"
  },
  "yuidoc": {
    "logo": "http://dev.belin.io/akismet.js/favicon.ico",
    "name": "Akismet.js",
    "url": "https://npmjs.org/package/akismet-js",
    "options" : {
      "linkNatives": true,
      "outdir": "doc/api",
      "paths": "lib",
      "tabtospace": 2
    }
  }
}
